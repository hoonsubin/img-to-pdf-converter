{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "bin/python-script"
    ],
    "windows": {
      "wix": {
        "language": "en-US"
      }
    }
  },
  "productName": "simply-bind",
  "version": "0.1.0",
  "identifier": "com.hoonkim.app",
  "plugins": {},
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Simply Bind",
        "width": 1280,
        "height": 800
      }
    ]
  }
}
